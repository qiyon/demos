## ~/.gitconfig 

[alias]
        st = status
        ci = commit
        br = branch
        co = checkout
        origin-co = "!sh -c \"git checkout -b $1 origin/$1\" -"
        upr = remote update origin --prune
        noci-merge = git merge --no-commit --no-ff
[pager]
        branch = false
        tag = false
[core]
	excludesfile = /path/to/global/.gitignore

